{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Ahoy",
  "scopeName": "source.ahoy",
  "patterns": [
    { "include": "#comments" },
    { "include": "#constants" },
    { "include": "#keywords" },
    { "include": "#functions" },
    { "include": "#enum-declarations" },
    { "include": "#typed-objects" },
    { "include": "#types" },
    { "include": "#operators" },
    { "include": "#strings" },
    { "include": "#characters" },
    { "include": "#numbers" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.question.ahoy",
          "match": "\\?(?!\\?).*$"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "meta.constant.ahoy",
          "match": "\\b([A-Z_][A-Z0-9_]*)\\s*(::)",
          "captures": {
            "1": { "name": "constant.other.ahoy" },
            "2": { "name": "keyword.operator.constant.ahoy" }
          }
        },
        {
          "name": "constant.language.boolean.ahoy",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.ahoy",
          "match": "\\b(if|then|else|anif|elseif|switch|on|loop|do|in|to|till|halt|next|return|when|import|program)\\b"
        },
        {
          "name": "keyword.other.ahoy",
          "match": "\\b(ahoy|print|printf)\\b"
        },
        {
          "name": "storage.type.ahoy",
          "match": "\\b(func|enum|struct|type)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "meta.function.ahoy",
          "begin": "\\b([a-z_][a-zA-Z0-9_]*)\\s*(::)\\s*(\\|)",
          "beginCaptures": {
            "1": { "name": "entity.name.function.ahoy" },
            "2": { "name": "keyword.operator.function.ahoy" },
            "3": { "name": "punctuation.definition.parameters.begin.ahoy" }
          },
          "end": "(\\|)\\s*([a-z_][a-zA-Z0-9_]*)?\\s*(:)",
          "endCaptures": {
            "1": { "name": "punctuation.definition.parameters.end.ahoy" },
            "2": { "name": "storage.type.ahoy" },
            "3": { "name": "punctuation.separator.ahoy" }
          },
          "patterns": [
            { "include": "#function-parameters" }
          ]
        },
        {
          "name": "meta.function-call.ahoy",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*(\\|)",
          "captures": {
            "1": { "name": "entity.name.function.call.ahoy" },
            "2": { "name": "punctuation.definition.arguments.begin.ahoy" }
          }
        }
      ]
    },
    "function-parameters": {
      "patterns": [
        {
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*(:)\\s*([a-z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "variable.parameter.ahoy" },
            "2": { "name": "punctuation.separator.ahoy" },
            "3": { "name": "storage.type.ahoy" }
          }
        }
      ]
    },
    "enum-declarations": {
      "patterns": [
        {
          "name": "meta.enum.ahoy",
          "begin": "\\b(enum)\\s+([a-z_][a-zA-Z0-9_]*)\\s*(:)",
          "beginCaptures": {
            "1": { "name": "storage.type.ahoy" },
            "2": { "name": "entity.name.type.enum.ahoy" },
            "3": { "name": "punctuation.separator.ahoy" }
          },
          "end": "^(?!\\s)",
          "patterns": [
            {
              "match": "^\\s*(\\d+)\\s+([A-Z_][A-Z0-9_]*)",
              "captures": {
                "1": { "name": "constant.numeric.integer.ahoy" },
                "2": { "name": "constant.other.enum.ahoy" }
              }
            },
            {
              "match": "^\\s*([A-Z_][A-Z0-9_]*)",
              "captures": {
                "1": { "name": "constant.other.enum.ahoy" }
              }
            }
          ]
        }
      ]
    },
    "typed-objects": {
      "patterns": [
        {
          "name": "meta.typed-object.ahoy",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*(<)",
          "captures": {
            "1": { "name": "entity.name.type.ahoy" },
            "2": { "name": "punctuation.definition.typeparameters.begin.ahoy" }
          }
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.ahoy",
          "match": "\\b(int|float|string|bool|char|dict|array|vector2|color|rectangle)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.word.ahoy",
          "match": "\\b(plus|minus|times|div|mod|and|or|not|is|lesser|greater|lesser_than|greater_than|less_than|greater_equal|lesser_equal)\\b"
        },
        {
          "name": "keyword.operator.ternary.ahoy",
          "match": "\\?\\?"
        },
        {
          "name": "keyword.operator.assignment.ahoy",
          "match": ":(?!=)"
        },
        {
          "name": "keyword.operator.comparison.ahoy",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.arithmetic.ahoy",
          "match": "(\\+|\\-|\\*|\\/|%)"
        },
        {
          "name": "keyword.operator.logical.ahoy",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.constant.ahoy",
          "match": "::"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.ahoy",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.ahoy",
              "match": "\\\\(n|t|r|\\\\|\"|%[dfs])"
            }
          ]
        }
      ]
    },
    "characters": {
      "patterns": [
        {
          "name": "string.quoted.single.ahoy",
          "match": "'([^'\\\\]|\\\\.)'"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.ahoy",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.ahoy",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "meta.variable.declaration.ahoy",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*(:)(?!=)",
          "captures": {
            "1": { "name": "variable.other.ahoy" },
            "2": { "name": "keyword.operator.assignment.ahoy" }
          }
        },
        {
          "name": "variable.other.ahoy",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
