? ==================== CONSTANTS ====================
PI :: 3.14159
MAX_SIZE :: 100

? ==================== SIMPLE FUNCTION ====================
add :: |a:int, b:int|:
    return a plus b

? ==================== ANOTHER FUNCTION ====================
multiply :: |x:int, y:int| int:
    return x times y

? ==================== GREET FUNCTION ====================
greet :: |name:string| string:
    return "Hello, "
    return nume

? ==================== VARIABLES ====================
x: 10
y: 20
sum: add|x, y|
product: multiply|x, y|

? ==================== CONDITIONALS ====================
if sum greater_than product then
    print|"Sum is greater"|
anif product greater_than sum then
    print|"Product is greater"|
else
    print|"They are equal"|

? ==================== LOOPS ====================
loop:0 to 10 do
    print|"Iteration"|

? ==================== ARRAYS ====================
numbers: [1, 2, 3, 4, 5]
loop num in numbers do
    print|"Number: %v", num|

